<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ThemeCloudy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundColor">@color/background_color_cloudy</item>
        <item name="cardBackgroundColor">@color/card_color_cloudy</item>
        <item name="colorPrimary">@color/main_color_cloudy</item>
        <item name="colorSecondary">@color/secondary_color_cloudy</item>
        <item name="background">@drawable/background_cloudy</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeNight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundColor">@color/background_color_night</item>
        <item name="cardBackgroundColor">@color/card_color_night</item>
        <item name="colorPrimary">@color/main_color_night</item>
        <item name="colorSecondary">@color/secondary_color_night</item>
        <item name="background">@drawable/background_cloudy</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>